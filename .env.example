# Local environment example
# Copy to .env at project root as needed.

########################################
# Common
########################################
# API listen port (apps/api)
PORT=4000
# Web app talks to API at this URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000

########################################
# Database
########################################
# Example Postgres URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/schedule_sync?schema=public"

########################################
# Google OAuth for Web (NextAuth in apps/web)
########################################
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
# NextAuth settings (apps/web)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-long-random-string

########################################
# Google Calendar
########################################
# Service Account (JSON key values)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-svc-account@project.iam.gserviceaccount.com
# Paste the private key, keep \n for line breaks if using single-line env
GOOGLE_SERVICE_ACCOUNT_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Calendars
# Default calendar used when user OAuth is not available
GOOGLE_CALENDAR_ID_DEFAULT=your-default-calendar-id@group.calendar.google.com
# Admin calendar to mirror every event to (e.g. admin@gmail.com)
GOOGLE_CALENDAR_ID_ADMIN=admin@gmail.com
# Timezone used when creating events
CALENDAR_TZ=Asia/Tokyo

########################################
# Polling (Option B): enable periodic sync without webhooks
########################################
POLL_ENABLED=true
# e.g. 60000ms = 1 minute
POLL_INTERVAL_MS=60000

########################################
# Optional: LINE (if you integrate later)
########################################
LINE_CHANNEL_ACCESS_TOKEN=your-line-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret
