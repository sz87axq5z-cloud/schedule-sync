{
  "name": "mono-schedule-sync",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "clean": "rimraf node_modules **/node_modules",
    "progress:now": "node ops/scripts/progress-now.cjs",
    "a11y:progress": "npx -y lighthouse http://localhost:3000/admin/progress --only-categories=accessibility --quiet --chrome-flags='--headless=new' --output=json --output-path=stdout | node ops/scripts/parse-lh-a11y.cjs"
  },
  "devDependencies": {
    "prisma": "^6.18.0",
    "rimraf": "^5.0.5",
    "turbo": "^2.0.6"
  }
}
